
v_register_counter = 0
constructor VirtualRegister(content_type, name, place)
    number = v_register_counter++

    if place == "global"
        register_char = "@"
    else
        register_char = "%"
    end

    source = {blz.nil}
    :add_source(instruction)
        source = instruction
    end

    uses = []
    :add_use(instruction)
        uses.add!(instruction)
    end

    :copy
        this
    end

    :show
        emit_llvm()
    end

    :emit_llvm
        if name == {blz.nil}
            register_char + "v" + number
        else
            register_char + name
        end
    end

end